
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <link href="~/css/easyui.css" rel="stylesheet" />
    <link href="~/css/icon.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/javascript/vue.js"></script>

</head>
<body>
    <div id="div1"> 
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--角色管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添加角色", "Create", "", new { @class = "BUTTON_STYLE1" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    角色编号
                </td>
                <td class="TD_STYLE1">
                    角色名称
                </td>
                <td class="TD_STYLE1">
                    角色说明
                </td>
                <td class="TD_STYLE1">
                    是否可用
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>         

            <tr class="TR_STYLE2" v-for="(item,i) in rows">
                <td class="TD_STYLE2">
                    {{item.Id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.gname}}
                </td>
                <td class="TD_STYLE2">
                    {{item.Explain}}
                </td>
                <td class="TD_STYLE2">
                    {{item.Available}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/Jurisdiction/Edit/'+item.Id]"><img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" />    </a>


                    <a v-bind:href="['/Jurisdiction/Delete/'+item.Id]" onclick="return confirm('您确认要删除吗?')"><img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" /></a>

                </td>              
            </tr>

        </table>
        <div id="leftPage" style="text-align:center">
            &nbsp;&nbsp;总数:{{row}} 例 &nbsp;&nbsp;&nbsp;
            当前第:{{pageNo}}页 /每页显示:3条 &nbsp;&nbsp;&nbsp;共 {{pagesCount}} 页
            &nbsp;&nbsp;&nbsp;<a href="#" v-on:click="first">首 页</a>
            &nbsp;&nbsp;&nbsp;<a href="#" v-on:click="back">上一页</a>
            &nbsp;&nbsp;&nbsp;<a href="#" v-on:click="next">下一页</a>
            &nbsp;&nbsp;&nbsp;<a href="#" v-on:click="last">末 页</a>
            &nbsp;&nbsp;&nbsp;跳到第 <input name="page" type="text" class="input1" id="currPage" v-model="cpage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" v-on:click="go" width="18" height="18" border="0">
        </div>
    </div>
    <script type="text/javascript">
        var currentPage = 1;
        var vm = new Vue({
            el: "#div1",
            data: {
                rows: null,
                cpage: null,
                pageNo: null,
                row: null,
                pagesCount: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "../Jurisdiction/Select/" + currentPage,
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.rows = dd.dt;
                            t.row = dd.rows;
                            t.pagesCount = dd.pages;
                            t.pageNo =currentPage;
                        }
                    });
                },
                first: function () {
                    currentPage = 1;
                    this.load();
                },
                back: function () {
                    if (currentPage>1) {
                        currentPage--;
                    } else {
                        currentPage = 1;
                    }
                    this.load();
                },
                next: function () {
                    if (currentPage < this.pagesCount) {
                        currentPage++;
                    } else {
                        currentPage = this.pagesCount;
                    }
                    this.load();
                },
                last: function () {
                    currentPage = this.pagesCount;
                    this.load();
                },
                go: function () {
                    if (this.cpage<=this.pagesCount) {
                        currentPage = this.cpage;
                        $("#leftPage  p").remove();
                        this.load();
                    } else {
                        alert("未有此页面!");
                    }
                },

            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
