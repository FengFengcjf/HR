@model Model.GuanliModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @using (Ajax.BeginForm("Create", new AjaxOptions() { HttpMethod = "Post" }))
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--添加角色</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="保存" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1">角色名称</td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.gname, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.gname, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">角色说明</td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.Explain, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.Explain, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">角色是否可用</td>
                    <td colspan="3" class="TD_STYLE2">
                        @Html.RadioButtonFor(model => model.Available, "是", new { @checked = true })<span style="margin:10px">是</span>
                       @Html.RadioButtonFor(model => model.Available, "否")<span>否</span>
                    @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })

                        @*<select name="drop">
                            <option value="true">是</option>
                            <option value="false">否</option>
                        </select>*@
                    </td>
                </tr>
            </table>
    }
</body>
</html>
