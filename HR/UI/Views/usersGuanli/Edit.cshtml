@model Model.usersModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/css/cwcalendar.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Ajax.BeginForm("Edit", new AjaxOptions() { HttpMethod = "Post" }))
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--修改用户</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="保存" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1">用户名称</td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.u_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.u_name, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">用户密码</td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.u_password, new { @class = "INPUT_STYLE1", @type = "password" })
                        @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">真实姓名</td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.u_true_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.u_true_name, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">用户身份</td>
                    <td class="TD_STYLE2">
                        @*@Html.DropDownListFor(model => model.Id, @ViewBag.dt as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Gid, @ViewBag.dt as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gid, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>

    }
    
    
</body>
</html>
