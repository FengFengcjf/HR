@model Model.config_majorModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/css/table.css" rel="stylesheet" />
    @*<script src="~/javascript/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@

</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置--职位添加
                </font>
            </td>
        </tr>

    </table>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        @using (Ajax.BeginForm("Add",new AjaxOptions() { HttpMethod="Post"}))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>新增</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <tr>
                        <td class="TD_STYLE1" width="19%"> 职位分类编号  </td>
                        <td class="TD_STYLE2">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.major_kind_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.major_kind_id, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                </div>

                <div class="form-group">
                    <tr>
                        <td class="TD_STYLE1" width="19%"> 职位分类名称  </td>
                        <td class="TD_STYLE2">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.major_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.major_kind_name, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                </div>

                <div class="form-group">
                    <tr>
                        <td class="TD_STYLE1" width="19%"> 职位编号  </td>
                        <td class="TD_STYLE2">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.major_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.major_id, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                </div>

                <div class="form-group">
                    <tr>
                        <td class="TD_STYLE1" width="19%"> 职位名称  </td>
                        <td class="TD_STYLE2">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.major_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.major_name, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                </div>
                <tr>
                    <td align="right">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="提交" class="btn btn-default" />
                                <input type="button" value="返回" class="btn btn-default" onclick="history.back();" />
                            </div>
                        </div>
                    </td>
                </tr>
            </div>
        }
        </table>
        <div>
            @*//  @Html.ActionLink("Back to List", "Index")*@
        </div>
</body>
</html>
